<%- include('./partials/adminNav.ejs')%>

    <div class="col-md-7 col-sm-12 col-lg-10">
        <div class="mx-auto col-lg-6 mt-5 col-sm-12">
            <form class="shadow p-3" method="post" enctype="multipart/form-data">
                <div class="mb-3 d-block">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="productName" name="productName" class="form-control" required>
                    <label for="price" class="form-label">Product Price</label>
                    <input type="price" name="price" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Select Catagory</label>
                    <select class="form-select" name="category" id="">
                        <option value="pizza">Pizza</option>
                        <option value="bargur">Bargur</option>
                        <option value="nonveg">Non Veg</option>
                    </select>
                    <label for="formFileMultiple" class="form-label">Select Product Image</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                </div>
                <% if(msg) { %>
                    <span class="alert alert-danger">
                     <%= msg %>
                    </span>
                    <% } %>
                        <button type="submit" class="btn btn-primary">Add product</button>
            </form>
        </div>
    </div>
    </div>
    </div>

