<%- include('./partials/header.ejs')%>
    <%- include('./partials/NavHome.ejs')%>

        <div class="container bg-light p-2">
            <div class="row">
                <div class="col-sm-12 col-lg-6 mx-auto" >
                    <form class="mt-5 shadow p-3" method="post">
                        <h3>Enter details here</h3>
                        <div class="row  mb-2">
                            <div class="col-6">
                                <div class="from-group">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" required class="form-control">
                                </div>
                            </div>
                            <div class="col-6 ">
                                <div class="form-group">
                                    <label for="name">city name</label>
                                    <input type="text" name="cityName" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row  mb-2">
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="name">Street Address</label>
                                    <input type="text" name="streetAddress" placeholder="e,g hyderpora,lane 2 " required class="form-control">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    <label for="name">zip code</label>
                                    <input type="text" name="zipCode" required class="form-control">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    <label for="name">Qty</label>
                                    <input type="text" name="qty" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row  mb-2">
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="name">Phone Number</label>
                                    <input type="text" name="phno" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Enter</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs')%>